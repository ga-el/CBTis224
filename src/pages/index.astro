  .menu {
    list-style: none;
    display: flex;
    gap: 32px;
    align-items: center;
    margin: 0;
    padding: 0;
  }
  .menu > li {
    position: relative;
    font-size: 1.08rem;
    font-weight: 600;
    letter-spacing: 0.5px;
    transition: color 0.2s;
  }
  .menu > li > a {
    color: var(--blanco);
    text-decoration: none;
    padding: 16px 22px 14px 22px;
    border-radius: 8px 8px 0 0;
    display: flex;
    align-items: center;
    transition: background 0.18s, color 0.18s;
    position: relative;
  }
  .menu > li > a:hover, .menu > li > a:focus {
    background: var(--gris-borde);
    color: var(--rojo-hover);
  }
  .menu > li.dropdown > a::after {
    content: '\25BC';
    font-size: 0.7em;
    margin-left: 7px;
    transition: transform 0.2s;
  }
  .menu > li.dropdown:hover > a::after {
    transform: rotate(-180deg);
  }
  /* Submenú principal */
  .submenu {
    display: none;
    position: absolute;
    top: 100%;
    left: 0;
    min-width: 230px;
    background: #233;
    border-radius: 0 0 12px 12px;
    box-shadow: 0 8px 32px rgba(0,0,0,0.22), 0 2px 8px rgba(0,0,0,0.18);
    padding: 10px 0;
    z-index: 9999;
    border: 1.5px solid var(--rojo-cbtis);
    animation: fadeInMenu 0.22s cubic-bezier(.4,2,.6,1);
  }
  @keyframes fadeInMenu {
    from { opacity: 0; transform: translateY(10px); }
    to { opacity: 1; transform: none; }
  }
  .dropdown:hover > .submenu, .dropdown:focus-within > .submenu {
    display: block;
  }
  .submenu li {
    position: relative;
  }
  .submenu li a {
    color: var(--blanco);
    text-decoration: none;
    padding: 12px 24px;
    display: block;
    border-radius: 6px;
    font-size: 1rem;
    font-weight: 500;
    transition: background 0.18s, color 0.18s, padding-left 0.18s;
  }
  .submenu li a:hover, .submenu li a:focus {
    background: var(--rojo-cbtis);
    color: var(--blanco);
    padding-left: 32px;
  }
  /* Submenús anidados */
  .submenu .dropdown > a::after {
    content: '\25B6';
    font-size: 0.7em;
    margin-left: 8px;
    float: right;
    transition: transform 0.2s;
  }
  .submenu .dropdown:hover > a::after {
    transform: translateX(4px);
  }
  .submenu .dropdown .submenu {
    left: 100%;
    top: 0;
    position: absolute;
    border-radius: 8px;
    min-width: 210px;
    background: #222b2b;
    box-shadow: 0 8px 32px rgba(0,0,0,0.18), 0 2px 8px rgba(0,0,0,0.13);
